#!/bin/sh

while [ $# -ne 0 ]; do
    case $1 in
        --with-compiler=*)
            v=`${1#--with-compiler=} --numeric-version`
            cat > arhelk.buildinfo <<EOF
--ghc-options: -shared -dynamic -fPIC -lHSrts-ghc$v -dynload deploy -L. -optl-Wl,-rpath,'\$ORIGIN'
ghc-options: -shared -dynamic -fPIC -lHSrts-ghc$v -dynload deploy
--extra-libraries: HSrts-ghc$v
EOF
            break
        ;;
        *)
            shift
    esac
done
